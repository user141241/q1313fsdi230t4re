@using GameNet.Models.Games
@model GameNet.Models.Platform.Lobby

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lobby</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="form-text-label">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <input type="text" id="Name" class="form-control" asp-for="Name" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPrivate" /> @Html.DisplayNameFor(model => model.IsPrivate)
                </label>
            </div>
            <div class="form-group form-check">
                <label>Le jeu de plateau</label>
                <select asp-for="SelectedBoardGame" asp-items="Html.GetEnumSelectList<BoardGame>()">
                    <option selected="selected" value="">--Choisir un jeu--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
